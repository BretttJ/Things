    "explorer.fileNesting.enabled": true,
    "explorer.fileNesting.patterns": { 
        "*.feature": "${capture}.feature.cs"
    },
    "files.exclude": { 
        "**/obj/": true,
        "**/bin/": true,
    },
    "cucumber.glue": [ 
        "BDD_Tests/StepDefinitions/**/*.cs",
    ],
    "cucumber.features": [
        "BDD_Tests/Features/**/*.feature",
    ]
}